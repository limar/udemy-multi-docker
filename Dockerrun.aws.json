{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions":[
        {
            "name" : "client",
            "image": "limar/multi-client",
            "hostname" : "client",
            "essential" : false,
            "memory" : 128
        },
        {
            "name" : "server",
            "image": "limar/multi-server",
            "hostname" : "api",
            "essential" : false,
            "memory" : 128
        },
        {
            "name" : "worker",
            "image": "limar/multi-worker",
            "essential" : false,
            "memory" : 128
        },
        {
            "name" : "nginx",
            "image" : "limar/multi-nginx",
            "essential" : "true",
            "portMappings" : [
                {
                    "hostPort" : "3050",
                    "containerPort" : "80"
                }
            ],
            "links" : ["client", "server"],
            "memory" : 128
        }
    ]
}
