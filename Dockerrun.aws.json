{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions":[
        {
            "name" : "client",
            "image": "limar/multi-client",
            "hostname" : "client",
            "essential" : false,
            "memory" : 160
        },
        {
            "name" : "server",
            "image": "limar/multi-server",
            "hostname" : "api",
            "essential" : false,
            "memory" : 160
        },
        {
            "name" : "worker",
            "image": "limar/multi-worker",
            "essential" : true,
            "memory" : 128
        },
        {
            "name" : "nginxcontainer",
            "image" : "limar/multi-nginx",
            "essential" : false,
            "portMappings" : [
                {
                    "hostPort" : "80",
                    "containerPort" : "80"
                }
            ],
            "links" : ["client", "server"],
            "memory" : 160,
            "mountPoints": [
                {
                  "sourceVolume": "awseb-logs-nginxcontainer",
                  "containerPath": "/var/log/nginx"
                }
            ]
        }
    ]
}
